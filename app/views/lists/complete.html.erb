<h3><%= @list.title %></h3>
<p><label>Search tasks: <input type="text" id="title-box" value=""></label></p>
<table class="table table-resposive table-striped">
  <thead>
    <tr class="head">
      <td><%= sortable "title", "Task" %></td>
      <td>Description</td>
      <td><%= sortable "due_date", "Due Date" %></td>
      <td><%= sortable "complete", "Completed?" %></td>
      <td>Mark Incomplete</td>
      <td>Update</td>
    </tr>
  </thead>
  <% @tasks.each do |task| %>
  <tr id="<%= task.id %>">
    <td><%= task.title %></td>
    <td><%= task.description %></td>
    <td><%= task.due_date %></td>
    <td><%= task.complete %></td>
    <td><button class="mark-incomplete btn btn-danger">Mark Incomplete</button></td>
    <td><%= link_to "Update", edit_task_path(task), class: "btn btn-default"%></td>
  </tr>
  <% end %>
</table>

<%= link_to "Tasks in Progress", list_path(@list.id), class:"btn btn-default" %>
