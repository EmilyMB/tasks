<h3><%= @list.title %></h3>
<table class="table table-resposive table-striped">
  <th>
    <td><%= sortable "title", "Task" %></td>
    <td>Description</td>
    <td><%= sortable "due_date", "Due Date" %></td>
    <td><%= sortable "complete", "Completed?" %></td>
    <td>Mark Complete</td>
    <td>Update</td>
  </th>
  <% @tasks.each do |task| %>
  <tr id="<%= task.id %>">
    <td></td>
    <td><%= task.title %></td>
    <td><%= task.description %></td>
    <td><%= task.due_date %></td>
    <td><%= task.complete %></td>
    <td><button id="mark-complete" task="<%task.id%>">Mark Complete</button></td>
    <td><%= link_to "Update", edit_task_path(task), class: "btn btn-default"%></td>
  </tr>
  <% end %>
</table>

<%= link_to "Add new task", new_task_path(list_id: @list.id), class: "btn btn-default" %>
